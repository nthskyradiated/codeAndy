---
import { getCollection } from "astro:content";
import BlogLayout from "../../layouts/BlogLayout.astro";
import BlogPost from "../../components/BlogPost.astro";
import type { Post } from "../../content/config";

export async function getStaticPaths() {
  const allPosts = await getCollection("posts");
  const uniqueTags = [...new Set(allPosts.map((post : Post) => post.data.tags).flat())];

  return uniqueTags.map((tag) => {
    const filteredPosts = allPosts.filter((post : Post) =>
      post.data.tags.includes(tag as string)
    );
    return {
      params: { tag },
      props: { posts: filteredPosts },
    };
  });
}

const { tag } = Astro.params;
const { posts } = Astro.props;

---

<BlogLayout title= {`All about ${tag as string}`}>
    <h1>Posts tagged with {tag}</h1>
    <ul>
        { posts.map((post:any) => <BlogPost url={'/posts/' + post.slug} title={post.data.title} />) }
    </ul>
</BlogLayout>
<style lang='scss'>
h1 {
  line-height: 2.5rem;
  padding-bottom: 32px;
}

</style>