---
import { Image } from 'astro:assets'
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import Card from '../components/Card.astro';
import Climber from '../components/SVGComponents/Climber.astro';
import pic from '../images/me.jpg';
import { fade } from 'astro:transitions';

const description: string = "My interests include devops, open-source, and web development. I'm into art and music, being outdoors and rock climbing! ðŸ§— Co-owner of a bouldering gym in the Philippines called The Pump Factory."

---

<Layout title="Debug the mind | About">
	<div class="container">
		<main>
			<Hero title="~$ whoami" hasImage={true} >
			<Climber />
			</Hero>
			<hr>
			<div class="profile-wrapper" transition:animate={fade({ duration: '0.7s' })}>
				<Image class="image" src={pic} alt="my photo" />	
				<Card title="Andy Pandaan" subtitle="Devops / Full-Stack / Tech" body={description} href='https://andypandaan.info'/>
			</div>
		</main>
	</div>
	</div>
</Layout>

<style lang='scss'>

	main {
		margin-top: -5%;
	}

	.profile-wrapper {
		display: flex;
		flex-direction: row;
		justify-content: space-evenly;
		gap: 24px;
		margin: 32px;
	}

	.image {

		width: 25%;
		min-width: 25%;
		height: 25%;
		min-height: 25%;
		border-radius: 50%;
	}
	@media (max-width: 768px) {
        .profile-wrapper {
			flex-direction: column;
			align-items: center;
			gap: 2px;
		}
		.image {

			width: 50%;
			min-width: 50%;
			height: 50%;
			min-height: 50%;
			border-radius: 50%;
			transform: translateY(12px);
			z-index: 2;
		}
	}
</style>
