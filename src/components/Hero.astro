---
import { Image } from 'astro:assets';

interface Props {
    title: string
    body?: string
    hasImage?: boolean
    image?: ImageMetadata
}
const { title, body, hasImage = false, image } = Astro.props
---

<section class="section-wrapper">
    <div class="image-wrapper">
        {hasImage && <Image class="img" src={image as ImageMetadata} alt=""/>}
    </div>
<div class="container">
    <h1>{title}</h1>
    <span>{body}</span>
</div>    
</section>

<style>
    .section-wrapper {
        margin: 16% 0;
        width: auto;
        position: relative;
    }
    .image-wrapper {
        width: 100%;
        max-height: 600px;
    }

    .img {
        width: inherit;
        min-height: inherit;
    }
    .container {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: auto;
        height: auto;
        align-items: center;
        padding-bottom:24px;
        text-align: center;
        color: steelblue;
        line-height: 3.2rem;
    }

    h1 {
        text-transform: uppercase;
        font-size: 48px;
    }

    @media (max-width: 768px) {
        .container {
        position:static;

    }

    }
</style>