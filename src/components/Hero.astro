---
import { fade, slide } from 'astro:transitions';
interface Props {
    title: string
    body?: string
    hasImage?: boolean
}
const { title, body, hasImage = false } = Astro.props
const noImg = 'noImg'
---

<section class="section-wrapper" transition:animate={slide({ duration: '0.7s' })}>
    <div class= {!hasImage as string && noImg } >
        <div class="image-wrapper">
            {hasImage && <slot />}
        </div>
        <div class= "container">
            <h1>{title}</h1>
            <span>{body}</span>
        </div>    
    </div>
</section>

<style lang='scss'>
@use '../styles/variables' as *;
    .section-wrapper {
        margin: 8% 0;
        width: auto;
        position: relative;
    }
    .image-wrapper {
        margin: inherit;
        margin-bottom: -32px;
    }
    .noImg {
        height: 200px;
        position: relative;
    }
    
    .container {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        align-items: center;
        padding-bottom:24px;
        text-align: center;
        color: $theme-green-1;
        line-height: 2.4rem;
        text-shadow: -.25px -.25px 0 $theme-green-2;
    }

    h1 {
        font-size: 48px;
    }

    @media (max-width: 768px) {
        h1 {
            font-size: 32px;
        }
    }
    @media (max-width: 480px) {
        h1 {
            font-size: 32px;
        }
        span {
            display: none
        }
    }
</style>