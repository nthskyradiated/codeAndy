---
import logo from "../images/logo.svg"
interface Props {
    title: string
    subtitle?: string
}

const { title, subtitle='Ask why later...'} = Astro.props
---

<header>
    <div class="container">
        <div class="brand-container">
            <div class="logo-container">
                <a href="#">
                    <img src={logo.src} alt="code and y" />
                </a>
            </div>
            <div class="title-container">
                <h1>{title}</h1>
                <p>{subtitle}</p>
            </div>
        </div>
            <nav>
                <ul>
                    <li><a href="/">Home</a></li>
                    <li><a href="/about">About</a></li>
                    <li><a href="/blog/1">Blog</a></li>
                </ul>
            </nav>
    </div>
</header>

<style lang='scss'>
@import '../styles/_variables.scss';
    header {
        background-color: $theme-red-2;
        width: 100%;
        padding-bottom: 8px;
        .container {
            display: flex;
            flex-direction: row;
            justify-content: space-between;
            align-items: flex-end;
            margin: auto;
            width: 80%;
        }
    }
    .brand-container {
        display: flex;
        flex-direction: row;
        justify-content: center;
        width: auto;
        gap: 16px;
        align-items: center;
    }
    .title-container {
        display: flex;
        padding: 32px 0;
        flex-direction: column;
        text-align: left;
        color: $theme-blue-1;
    }
    img{
    width: 100px;
    height: auto;
    padding-top: 8px;
    }
    ul{
        display: flex;
        flex-direction: row;
    }
    li {
        list-style: none;
        text-align: center;
        align-items: bottom;
        padding-right: 32px;
    }
    a, a:visited{
        text-decoration: none;
        text-transform: uppercase;
        font-size: x-large;
        color: $theme-blue-1;
        &:hover {
            opacity: .65;
            transition: .5s ease-in-out;
        }
    }
    @media (max-width: 768px) {
        nav {
            display: none;
        }
    }
    @media (max-width: 540px) {
        .brand-container {
            transform: translateX(49%);
            display: flex;
            flex-direction: column-reverse;
            width: 50%;
            align-items: left;
            .title-container {
                text-align: center;
                margin-bottom: -40px
            }
        }
    }
</style>