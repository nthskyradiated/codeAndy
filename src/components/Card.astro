---
interface Props {
	title: string;
	subtitle?: string;
	body: string;
	href?: string;
	author?: string;
	date?: Date;
}

const { href, title, body, author, date, subtitle } = Astro.props;
---

<li class="link-card" data-theme="">
	<a href={href}>
		<h2>
			{title}
			<span>&rarr;</span>
		</h2>
		<strong><small>{author}</small></strong>
		<p>
			{subtitle}
		</p>
		<p>{body}</p>
		<small>{date}</small>
	</a>
</li>
<style lang='scss'>
	@use '../styles/variables' as *;

	.link-card {
		list-style: none;
		display: flex;
		/* padding: 8px; */
		background-color: $primary-dark;
		color: $secondary-light;
		opacity: .85;
		background-image: none;
		background-size: 100%;
		border-radius: 10px;
		background-position: 100%;
		transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		box-shadow: inset 0 0 0 5px rgba(255, 255, 255, 0.1);
		&.link-card:is(:hover, :focus-within) h2 {
			color: $theme-green-2;
		}
		&:hover {
			background-color: $tertiary-dark;
			transition: .2s ease-in-out;
    	}
	}
	.link-card > a {
		width: auto;
		text-decoration: none;
		line-height: 1.4;
		padding: calc(1.5rem - 1px);
		color: $secondary-light;
		opacity: 0.9;
	}
	
	h2 {
		margin: 0;
		font-size: 1.25rem;
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}
	p {
		margin-top: 0.5rem;
		margin-bottom: 0.5rem;
	}
	.link-card:is(:hover, :focus-within) {
		
		background-position: 0;
		// background: $accent-gradient;
		
	}

	li[data-theme='dark']{
		background-color: $secondary-dark;
		color: $secondary-light;
		box-shadow: inset 0 0 0 5px $tertiary-dark;
		&.link-card:is(:hover, :focus-within) h2 {
			color: $theme-green-3;
		}
		&:hover {
			background-color: $primary-dark;
			transition: .2s ease-in-out;
    	}
		
	}
	li[data-theme='light']{
		background-color: $primary-dark;
		color: $tertiary-light;
		&.link-card:is(:hover, :focus-within) h2 {
			color: $theme-green-2;
		}
		&:hover {
			background-color: $tertiary-dark;
			transition: .2s ease-in-out;
    	}
	}
	
</style>
