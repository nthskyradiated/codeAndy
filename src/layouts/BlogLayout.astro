---
interface Props {
	title: string;
}

const { title } = Astro.props;

import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'
import Hamburger from '../components/Hamburger.astro';

import '@fontsource/ubuntu';
import '@fontsource/ubuntu-mono';
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Code and Y Website" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg" href="../../public/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<script is:inline src="https://kit.fontawesome.com/72852e9073.js" crossorigin="anonymous"></script>
		<title>{title}</title>

		</head>
	<body>
		<Header title={'Debug the Mind Journals'} />
		<Hamburger />
		<div class="container">
			<slot />
		</div>
		<Footer />

	</body>

</html>
<script>
	import '../scripts/hamburger.js'
  </script>
<style is:global lang='scss'>

	*,*::before, *::after {
		box-sizing: border-box; 
		margin: 0; 
		padding: 0;
	}
	html {
		font-family: 'segoe UI', 'Ubuntu-mono', sans-serif;
		background: #e9ecee;
		color: #333;
	}
	body {
		min-height: 100vh;
		
		footer {
			position: sticky;
  			top: 100%;
		}
}

	.container {
		width: 75%;
		margin: 64px auto;
		/* line-height: 2.5em; */
		align-items: center;
	}

	/* stop body scrolling */
.stop-scrolling {
    overflow: hidden;
}

</style>
